{
  "manifest_version": 2,
  "name": "Microsoft English Locale Redirect",
  "version": "1.0",
  "description": "Redirects all localized URLs on microsoft.com to english (en-us)",
  "homepage_url": "https://github.com/skystedt/MicrosoftLocaleRedirect",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeWebRequest",
    "*://*/*"
  ],
  "background": {
    "scripts": ["main.js"],
    "persistent": true
  }
}